{
  "manifest_version": 3,
  "name": "Quick Tab Switcher",
  "version": "1.0",
  "description": "Switch tabs quickly using a keyboard shortcut.",
  "permissions": ["tabs"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "open-tab-switcher": {
      "suggested_key": {
        "default": "Ctrl+Space"
      },
      "description": "Open the tab switcher"
    }
  },
  "icons": {
    "64": "logo64.png",
    "128": "logo128.png"
  }
}
